{% extends 'base.twig' %}

{# Add View-Specific Stylesheets #}
{% block stylesheets %}
  <link rel='stylesheet' href='/stylesheets/login.css'/>
{% endblock %}

{# Add View-Specific Scripts #}
{% block scripts %}
  <script type='text/javascript' src='/js/login.js'></script>
{% endblock %}

{# View Body #}
{% block body %}
  <div class = "card sign-in-card pt-0">
    {% if error %}
      <div class="card red text-center z-depth-2">
        <div class="card-body">
          <p class="white-text mb-0">{{ error }}</p>
        </div>
      </div>
    {% endif %}
    <form action="/login" method="post" class = "card-body">
      <h1 class="h5 text-center mb-4c card-title">Sign In</h1>
      <div class="row md-form">
        <i class="fa fa-user prefix grey-text"></i>
        <input type="text" name="username" id="defaultForm-username" class="form-control" maxLength="32" required>
        <label for="defaultForm-username">Username</label>
      </div>
      <div class="row md-form">
        <i class="fa fa-lock prefix grey-text"></i>
        <input type="password" name="password" id="defaultForm-pass" class="form-control" maxLength="64" required>
        <label for="defaultForm-pass">Password</label>
      </div>
      <div class="text-center">
        <button class="btn bg-blue-grey"><i class="fa fa-user"></i> Go</button>
      </div>
      <div class="modal-footer border-0">
        <div class="options font-weight-light">
          <p class="m-0">Not a member? <a href="/signup">Sign Up</a></p>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
